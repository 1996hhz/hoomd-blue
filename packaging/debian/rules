#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export CXXFLAGS = -Wall -O3 -funroll-loops 
export LD_LIBRARY_PATH += ":../obj-$(dpkg-architecture -qDEB_BUILD_GNU_CPU)-linux-gnu/libhoomd/"
export LD_LIBRARY_PATH += ":${CMAKE_BINARY_DIR}/lib}"
export LD_LIBRARY_PATH += ":/usr/local/lib/"
#echo "${LD_LIBRARY_PATH}"
export RPATH += /home/gaurdro/hoomd-blue_0.9.1-beta3800/obj-i486-linux-gnu/libhoomd/
export DEB_CMAKE_EXTRA_FLAGS += -DENABLE_NATIVE_INSTALL=ON -DPYTHON_SITEDIR=lib/python2.6/
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/cmake.mk
#%:
#	dh  $@
