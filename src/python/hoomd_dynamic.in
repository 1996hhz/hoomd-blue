# /bin/bash

if test "${HOOMD_ROOT+set}" != set ; then
	# modify the next line to list the full path where you extracted hoomd
	HOOMD_ROOT=@CMAKE_INSTALL_PREFIX@
fi

##########################################
# don't modify anything below this line
PYTHONPATH="${HOOMD_ROOT}/lib/hoomd/python-module:${PYTHONPATH}"
export HOOMD_ROOT
python $*
